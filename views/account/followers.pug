extends ../layouts/main-layout.pug
block title 
    title Takipçilerim 

block content 
    h1.text-center.m-3 Takipçilerim

    div.heading-page.header-text
        section.page-heading
            .container
                .row
                    .col-lg-12
                        .text-content
                            h2 Takipçilerim
    
    section.call-to-action
        .container
            .row
                .col-lg-12
                    .main-content
                        .row
                            .col-lg-8
                                span Stand Blog HTML5 Template
                                h4 Creative HTML Template For Bloggers!
                            .col-lg-4
                                .main-button
                                    a(href="https://templatemo.com/tm-551-stand-blog", target="_parent") Download Now!

    section.blog-posts.grid-system
        .container
            .row
                .col-lg-8
                    .all-blog-posts
                        .row
                            if user.takipci.length === 0
                                h1 Takipçi No
                            else
                                each takipci in user.takipci
                                    .col-md-4.col-sm-12 
                                        .card(style="width: %100;")
                                            a(href=`/user/${takipci._id}`): img.card-img-top(src=`${takipci.url}`, alt=`${takipci.name}`)
                                            .card-body
                                                a(href=`/user/${takipci._id}`): h5.card-title #{takipci.name} #{takipci.lastName}
                                                a(href=`/user/${takipci._id}`): p.card-text #{takipci.email}
                                                .d-flex.justify-content-around.align-items-center 
                                                    a.btn.btn-primary(href=`/user/followers/${takipci._id}`) Takipçi : #{takipci.takipci.length}
                                                    a.btn.btn-primary(href=`/user/followings/${takipci._id}`) Takip Edilen : #{takipci.takipEdilen.length}

                                
                                .col-lg-12
                                    ul.page-numbers
                                        li
                                            a(href="#") 1
                                        li.active
                                            a(href="#") 2
                                        li
                                            a(href="#") 3
                                        li
                                            a(href="#")
                                                i.fa.fa-angle-double-right

                .col-lg-4
                    .sidebar
                        .row
                            .col-lg-12
                                .sidebar-item.search
                                    form#search_form(name="gs", method="GET", action="#")
                                        input.searchText(type="text", name="q", placeholder="type to search...", autocomplete="on")
                            .col-lg-12
                                .sidebar-item.recent-posts
                                    .sidebar-heading
                                        h2 Recent Posts
                                    .content
                                        ul
                                            each recentBlog in recentBlogs
                                                li
                                                    a(href=`/blog/${recentBlog._id}`)
                                                        h5 #{recentBlog.name}
                                                        span
                                                            | #{recentBlog.date.toLocaleString().substring(0, 16)}
                            
                            .col-lg-12
                                .sidebar-item.categories
                                    .sidebar-heading
                                        h2 Categories
                                    .content
                                        ul
                                            each category in categories
                                                li
                                                    a(href=`/category/${category._id}`) #{category.name}
            
                            .col-lg-12
                                .sidebar-item.tags
                                    .sidebar-heading
                                            h2 En Çok Beğenilenler
                                    .content
                                        ul
                                            each mostLikeBlog in mostLikesBlogs
                                                li
                                                    a(href=`/blog/${mostLikeBlog._id}`)
                                                        h5 #{mostLikeBlog.name}
                                                        span
                                                           | #{mostLikeBlog.date.toLocaleString().substring(0, 16)} 
                                                        span.d-block #{mostLikeBlog.likeSayisi} Beğenme