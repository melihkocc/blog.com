extends ../layouts/main-layout.pug
block title 
    title Profil Fotoğrafı Ekle 

block content 
    h1.text-center Profil Fotoğrafı Ekle
    section.about-us
        .container
            .row
                .col-lg-12 
                    if errorMessage 
                        .alert.alert-danger #{errorMessage}
                .col-lg-12
                    form(method="POST",action="/profil-photo",enctype="multipart/form-data")
                        .mb-3
                            input.form-control-file(type="file",name="image",required)
                        .mb-3.d-flex.justify-content-between.align-items-center
                            button(type="submit", class="btn btn-primary") Ekle    


